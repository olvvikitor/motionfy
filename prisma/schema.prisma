generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String             @id @default(uuid())
  email               String?
  spotifyId           String             @unique
  spotifyAccessToken  String?
  spotifyRefreshToken String?
  country             String
  display_name        String
  img_profile         String
  spotifyExpiresAt    DateTime
  histories           ListeningHistory[]
  moodAnalyses MoodAnalysis[]
}

model Track {
  id             String             @id @default(uuid())
  spotifyId      String?            @unique
  title          String
  artist         String
  album          String?
  createdAt      DateTime           @default(now())
  histories      ListeningHistory[]
}

model MoodAnalysis {
  id         String   @id @default(uuid())
  moodScore  Float
  sentiment  String
  emotions   Json
  analyzedAt DateTime @default(now())
  tracksAnalyzeds Json
  userId     String  
  user       User     @relation(fields: [userId], references: [id])
}

model ListeningHistory {
  id       String   @id @default(uuid())
  userId   String
  trackId  String
  playedAt DateTime
  track    Track    @relation(fields: [trackId], references: [spotifyId])
  user     User     @relation(fields: [userId], references: [id])

  @@unique([userId, trackId, playedAt])
}
